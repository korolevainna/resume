<main  class="p-5">
   {{#with navigation}} 
    <div class="row g-2">
        <div class="col-8">
            <div class="col-8 mb-3">
               <div class="nav nav-tabs">
                 {{#each links}}
                    <div class="nav-item">
                         <a href={{href}} class="nav-link active"> {{text}} </a>
                   </div>
                   {{/each}}     
                 </div>  
            </div>
        </div>
     </div>    
    {{/with}}
	<hr>

    
	<hr>
	<div class="row">
		<div class="col-8">
			<h1>{{header}}</h1>
		{{#with formBlock}} 
		        {{#each rating}}
					<div>{{title.rating}} : {{value.rating}}</div>
				{{/each}}
                    <div class="nav nav-tabs">
						{{#each actionBlock}}
							<div class="nav-item">
								<a  class="nav-link active"> {{text}} </a>
							</div>
					</div>

						<p>{{title}}</p>
						<div class="card">
								{{#each report}} 
									<div class="btn">
										<a class="btn btn-outline-primary" {{#if isActive}}true{{/if}} href="{{link}}">{{text}}</a>
									</div>
								{{/each}}
						 </div>  

				<p>{{title}}</p>
			{{#each feedbackBlock}}
					<div class="btn">
						 <div href="{{link}}" class="btn {{#if isWarning}} btn-warning{{/if}}  {{#if isSuccess}} btn-success{{/if}} {{#if isDanger}} btn-danger{{/if}}">{{text}}</div>
					</div>
			{{/each}}
			{{/each}}
		</div>
	

		<div class="col-4">
			{{#each goodsInfo}}
			<div class="card p-2 ph-3">  
				<div class="img">{{photo}}</div>   
					 
					<div>{{name}} : {{price}} </div>
			
					<hr>	
				{{#each total.additional_info}}		
					<div>{{text}} : {{value}} </div>
				{{/each}}
				<hr>	
				{{text.total_price.text}} : {{total.total_price.value}} 
				<hr>	
				{{#each total.button}}
						<div 
							class="btn  {{#if isPrimary}} btn-primary{{/if}}
							{{#if isOutline}} btn-outline-primary {{/if}} mb-2">{{text}}
						</div>
				{{/each}}
				</div>
			{{/each}}    
		</div>
       {{/with}} 
	 </div>
 

{{#each reviewList}}
 <div class="card my-2">
	<div class="card-body">
		<strong>{{title.userName}}</strong>
		<p>{{title.caption}}</p>
		<p>{{title.date}}</p>
		<hr>
		{{#with reviewBody}}
		  {{seller.title}}
		  {{seller.value}}
		  <br>
		  {{rating.title}}
		  {{rating.value}}
		  <br>
		  {{#with text}}
		  {{this}}
		  {{/with}}
		  <br>
		  <strong>{{advantages.title}}</strong>
		  <p>{{advantages.text}}</p>
		  <br>
		  <strong>{{disadvantages.title}}</strong>
		  <p>{{disadvantages.text}}</p>
		  {{#each images}}
		      <img class="col-2" src="{{images.[0]}}">
		  {{/each}}
		  <div class="card">
				{{#with coments}}
				  <p>{{userName}}</p>
				  <p>{{date}}</p>
				  <p>{{text}}</p>
				{{/with}}
		  </div>

		{{/with}}
	</div>
 </div>
{{/each}}


	
  <hr>
  {{#with payment}}
  <h1>{{title}}</h1>
  {{#each list}}
     <div class="form-check">
		<label class="form-check-label">{{type}} {{description}}</label>
	    <input name="form" type="radio" class="form-check-input">
	 </div>
  {{/each}}
  {{/with}}

</div> 
</main>




