<main  class="p-5">
   {{#with navigation}} 
    <div class="row g-2">
        <div class="col-8">
            <div class="col-8 mb-3">
               <div class="nav nav-tabs">
                 {{#each links}}
                    <div class="nav-item">
                         <a href={{href}} class="nav-link active"> {{text}} </a>
                   </div>
                   {{/each}}     
                 </div>  
            </div>
        </div>
     </div>    
    {{/with}}
	<hr>

	<div class="row">
		<div class="col-8 mb-3 hp-3">
			{{#with formBlock}}
			  <h1>{{header}}</h1>
			   <div>{{rating.title}} : {{rating.value}}</div>

			  {{#with actionBlock}}
			<div class="nav nav-tabs hp-4 mb-4">
				{{#each tabs}}
				<div class="nav-item">
					<a class="nav-link active" {{#if isActive}}true{{/if}}>{{text}}</a>
				</div>
				{{/each}}
			</div>

			
			
				{{#each report}}
				<h3>{{title}}</h3>
				<div class="card ph-3">
				<div class="btn">
					
					<a class="btn btn-outline-dark" href="{{link}}">{{text}}</a>
				</div>
				{{/each}}
				</div>
			</div>
			{{/with}}

			
			{{#with feedbackBlock}}
			<h2>{{title}}</h2>
			<div class="col-12 mb-2">
				{{#each buttons}}
				<div class="btn  mb-4">
					<div href="{{link}}"
						class="btn {{#if isWarning}} btn-warning{{/if}}  {{#if isSuccess}} btn-success{{/if}} {{#if isDanger}} btn-danger{{/if}}">
						{{text}}</div>
				</div>
				{{/each}}
				</div>
			{{/with}}
		</div>


		<div class="col-4">
			{{#with goodsInfo}}
			  <div class="card p-2 mb-2 ph-3"> 
				<div class="col-3">
				   <img  class="caard-img-top"  src={{photo}}> 
				</div> 
				<div>{{name}} </div>
			  </div>
			  <div class="card my-3">
				<p>{{price}}</p>
				{{#each	buttons}}
				<div class="btn  mb=3 text-center  {{#if isPrimary}} btn-primary{{/if}}
					{{#if isOutline}} btn-outline-primary {{/if}} mb-2">{{text}}
				</div>
				{{/each}}
			  </div>
			

				
				<div class="card mb-3">
				<p>{{seller.title}}:{{seller.value}}</p>
				
				</div>
				
			
			{{/with}}
		</div>
		{{/with}}
	</div>


	{{#each reviewList}}
	<div class="card my-2">
		<div class="card-body">
			<strong>{{title.userName}}</strong>
			<p>{{title.caption}}</p>
			<p>{{title.date}}</p>
			<hr>
			{{#with reviewBody}}
			{{seller.title}}
			{{seller.value}}
			<br>
			{{rating.title}}
			{{rating.value}}
			<br>
			{{#with text}}
			{{this}}
			{{/with}}
			<br>
			<strong>{{advantages.title}}</strong>
			<p>{{advantages.text}}</p>
			<br>
			<strong>{{disadvantages.title}}</strong>
			<p>{{disadvantages.text}}</p>
			
			    <img class="card=img-top" src={{images.[0]}}>
			
			<div class="card">
			{{#each coments}}
				<p>{{userName}}</p>
				<p>{{date}}</p>
				<p>{{text}}</p>
			{{/each}}
			</div>

			{{/with}}
		</div>
	</div>
	{{/each}}



	<div class="card text-br-dark">
	<div  class="alert alert-dark text-bg-dark-center">
			{{#with service}}
	<h1>{{title}}</h1>
	<h3>{{description}}</h3>
	{{#each buttons}}
	<div class="btn">
		<div class="btn btn-primary" src={{link}}>{{text}}</div>
	</div>
	{{/each}}
	{{/with}}
  </div>
	</div>
	</div>
</main>




