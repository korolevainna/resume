<main  class="p-5">
	 {{#with navigation}} 
    <div class="row g-2">
        <div class="col-12">
            <div class="col-12 mb-3">
               <div class="nav nav-tabs">
                 {{#each links}}
                    <div class="nav-item">
                         <a href={{href}} class="nav-link active"> {{text}} </a>
                   </div>
                   {{/each}}     
                 </div>  
            </div>
        </div>
     </div>    
    {{/with}}



   <div class="row">
      {{#each breadcrumb}}
            <div class="col-4 mb-4 mt-4">
				<ul class="nav">
               <li class="nav nav-tabs">
					<a href={{url}} class="nav-link active"> {{name}} </a>
			   </li>
			   </ul>
			</div>	
     {{/each}}
	</div>


    <h1 class="mb-5 mt-4">{{header}}</h1>
	

	<div class="row g-2">
      {{#each sortBlock}}
	   <div class="col-4 mt-4 mb-5">
         <select class="form-select">
			<option selected>{{placeholder}}</option>
                {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                {{/each}}
        </select> 
		</div>   
    {{/each}}	
	

<section>
    <div class="container">
         <div class="row g-3">
            <div class="col-4">
                    {{#with filterBlock}}
                    <div class="card">
                        <div class="card-body">
                            {{#with sellers}}
                            <p class="mb-2">{{title}}</p>
                            <div class="mb-2">
                                {{#each list}}
                                <div class="mb-2">
                                    <input name="quiz" type="checkbox" class="form-check-input">
                                    <label class="form-check-label">{{value}}</label>
                                </div>
                                {{/each}}
                            </div>
                            {{/with}}

                            <hr>

                            {{#with brands}}
                            <p class="mb-2">{{title}}</p>
                            <div class="mb-3">
                                <input type="text" class="form-control" placeholder="{{input.placeholder}}">
                            </div>
                            <div class="form-check">
                                {{#each options}}
                                <div class="mb-2">
                                    <label class="form-check-label">{{value}}</label>
                                    <input class="form-check-input" name="quiz" type="checkbox">
                                </div>
                                {{/each}}
                            </div>
                            {{/with}}

                            <hr>

                            {{#with price}}
                            <p class="mb-2">{{title}}</p>
                            <div class="mb-3">
                                <input type="text" class="form-control mb-3" placeholder="{{range.from}}">
                                <input type="text" class="form-control" placeholder="{{range.to}}">
                            </div>
                            <button class="btn btn-outline-secondary px-3 btn-sm">{{button.text}}</button>
                            {{/with}}

                            <hr>

                            {{#each filterList}}
                            <p class="mb-2">{{title}}</p>
							{{#each options}}
                            <div class="mb-2">
                                <input name="quiz" type="checkbox" class="form-check-input">
                                <label class="form-check-label">{{value}}</label>
                            </div>
							{{/each}}
                            {{/each}}
                        </div>
                    </div>
                    {{/with}}
             </div>

			{{#each goodsList}}
			<section class="col-4 mb-5">
				<div class="card list-group">
					<img class="card-img-top" src="{{img}}">
					<span class="badge rounded-pill text-uppercose {{#if isHot}}text-bg-warning{{/if}} {{#if isNew}}text-bg-info{{/if}} {{#if isFast}}text-bg-success{{/if}}{{#if isFree}}text-bg-dark{{/if}}">{{text}}</span>
					<h4>{{name}}</h4>
					<p>{{amount}} {{text}}</p>
					<h4>{{price}}</h4>
					{{#each  buttons}}
					<div class="btn">
							<a href="{{link}}"class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}} btn-secondary{{/if}}">{{text}}</a>
					</div>
					{{/each}}
					{{#each characteristics}}
					<ul>
						<li>
							<a  class="nav-link active"> {{title}} : {{value}} </a>
						</li>
					</ul>
					{{/each}}
				</div>
			</section>
			{{/each}}
		</div>
	</div>
 </section>

   




  <hr>
   <section>
        <div class="container">
            {{#with service}}
            <div class="row pt-5 mb-4">
                <div class="col-12">
                    <div class="card text-bg-success text-center">
                        <div class="card-body">
                            <h2 class="card-title">{{title}}</h2>
                            <p>{{description}}</p>
                            {{#with buttons.[0]}}
                            <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                            {{/with}}
                        </div>
                    </div>
                </div>
            </div>
            {{/with}}
        </div>
    </section>



 <div class="row">
	<div class="col-12 mb-4">
     {{#with  footer}}
     <table class="table table-striped table-brodered text-bg-success">
         <a href="{{link}}">{{text}}</a>
     </table>
	 {{/with}}
	 </div>
</div>

</main>
















