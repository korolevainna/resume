
<main  class="p-5">
   {{#with navigation}} 
    <div class="row g-2">
        <div class="col-6">
            <div class="col-6 mb-3">
               <div class="nav nav-tabs">
                 {{#each links}}
                    <div class="nav-item">
                         <a href={{href}} class="nav-link active">{{text}} </a>
                   </div>
                   {{/each}}     
                 </div>  
            </div>
        </div>
     </div>    
    {{/with}}
	<hr>

    {{#with formBlock}} 
    <h1>{{header}}</h1>
	<hr>
	<div class="row">
		<div class="col-8">
			{{#each rating}}
				<h2>{{title}}</h2>
				<h4>{{value}}</h4>
			{{/each}}
                {{#each actionBlock}}
                    <div class="nav nav-tabs">
                        <a  class="text-uppercase"> {{text}}</a>
                    </div>
                {{/each}}   
  
                  {{#each report}}
				  <p>{{title}}</p>
				  
				<div class="btn">
					<a class="btn" href="{{link}}">{{text}}</a>
				 </div>
				 {{/each}}  

				 <hr>
				 {{#each feedbackBlock}}
					<p>{{title}}</p>
					<div class="btn">
						 <div href="{{link}}" class="btn {{#if isWarning}} btn-warning{{/if}}  {{#if isSuccess}} btn-success{{/if}} {{#if isDanger}} btn-danger{{/if}}">{{text}}</div>
					</div>
				 {{/each}}
		</div>
		<div class="col-4">
			{{#each goodsInfo}}
			<div class="card p-2 ph-3">  
				<h2 class="card-title">{{total.title}}</h2>   
				{{#each total.item_list}} 	 
					<div>{{name}} : {{price}} </div>
				{{/each}}
					<hr>	
				{{#each total.additional_info}}		
					<div>{{text}} : {{value}} </div>
				{{/each}}
				<hr>	
				{{text.total_price.text}} : {{total.total_price.value}} 
				<hr>	
				{{#each total.button}}
						<div 
							class="btn  {{#if isPrimary}} btn-primary{{/if}}
							{{#if isOutline}} btn-outline-primary {{/if}} mb-2">{{text}}
						</div>
				{{/each}}
				</div>    
			{{/each}}
		</div>
	</div>
    {{/with}} 
 

	<div class="col-4 mb-2">
		<div class="card">
			<div class="btn">		
				<a  class="btn btn-success"> {{action_block.[0].text}}</a>
				<a  class="btn btn-danger"> {{action_block.[1].text}}</a>
				<a  class="btn btn-info"> {{action_block.[2].text}}</a>	
			</div>	
		</div>    

	
	</div> 
    </div>
  
       


<div class="row g-5">
<div class="card col-8">
	{{#with delivery}}
		<h3 class="mb-4">{{title}}</h3>
		{{#each select}}
		<label class="form label">{{label}}</label>
		<div class="col-4 row p-3">
			<select class="form-selact form select mb-2">
				<option selected>{{plaseholder}}</option>
					{{#each options}}
					<option value="{{value}}">{{text}}</option>
					{{/each}}
			</select>
		</div>
		{{/each}}
		{{#each delivery_type}}
		<div class="form-check">
			<label class="form-check-label">{{type}}</label>
			<input name="form" type="radio" class="form-check-input">
		</div>
		{{/each}}
    {{/with}}
</div>
</div>

  <hr>
  {{#with payment}}
  <h1>{{title}}</h1>
  {{#each list}}
     <div class="form-check">
		<label class="form-check-label">{{type}} {{description}}</label>
	    <input name="form" type="radio" class="form-check-input">
	 </div>
  {{/each}}
  {{/with}}

</div> 

</main>




