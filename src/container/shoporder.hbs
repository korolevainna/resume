
<main  class="p-5">
   {{#with navigation}} 
    <div class="row g-2">
        <div class="col-12">
            <div class="col-6 mb-3">
               <div class="nav nav-tabs">
                 {{#each links}}
                    <div class="nav-item">
                         <a href={{href}} class="nav-link active"> {{text}} </a>
                   </div>
                   {{/each}}     
                 </div>  
            </div>
        </div>
     </div>    
    {{/with}}
	<hr>


    <h1>{{header}}</h1>
	<hr>
	<div class="row">
		<div class="col-8">
    	{{#with contacts_data}}
     		<h2>{{title}}</h2>
               <div class="btn btn-tabs">
                {{#each buttons}}
                    <div class="btn  {{#if isPrimary}} btn-primary{{/if}}
					    {{#if isOutline}} btn-outline-primary {{/if}} mb-2">{{text}}
                    </div>
                {{/each}}
			  </div>



            {{#each form.input}}
			    <div class="row g-3">
				   <div class="col-4 mb-2">				
						<label class="form-label">{{label}}</label>  
						<select class="form-control form-control-lg"><option>{{placeholder}}</option> </select>
						<div class="form-text form-select-ln">{{caption}}</div>
					 </div>	
				</div>	 
			 {{/each}}  
	
				 {{#each form.switch}}
				 <div class="col-8 mb-2">
					<div class="form-check form-switch">
						<label class="form-check-label">{{text}}</label>
						<input name="{{isActive}}" type="checkbox" class="form-check-input">
					</div>
				</div>
				 {{/each}}   
  		 {{/with}}
		 </div> 
	

		<div class="col-4">
			<div class="card p-2 mb-2">
				{{#each action_block}}
				<div class="btn {{#if isSuccess}}btn btn-success{{/if}} {{#if isDanger}}btn btn-danger{{/if}} {{#if isInfo}}btn btn-info{{/if}} mb-2">{{text}}	
			    </div>
				{{/each}}
			</div>
			   
				<div class="card p-2 pb-1">  
						<h2 class="card-title">{{total.title}}</h2>   
						{{#each total.item_list}} 	 
							<div>{{name}} : {{price}} </div>
						{{/each}}
							<hr>	
						{{#each total.additional_info}}		
							<div>{{text}} : {{value}} </div>
						{{/each}}
						<hr>	
						{{text.total_price.text}} : {{total.total_price.value}} 
						<hr>	
						{{#each total.button}}
				<div
					class="btn  {{#if isPrimary}} btn-primary{{/if}}
					{{#if isOutline}} btn-outline-primary {{/if}} mb-2">{{text}}
				</div>	
				   {{/each}} 
				</div>   
		</div> 
	  </div>
	
    <br>   
<div class="row g-5">
<div class="card col-8">
	{{#with delivery}}
		<h3 class="mb-4">{{title}}</h3>
		{{#each select}}
		<label class="form label">{{label}}</label>
		<div class="col-4 mb-3">
			<select class="form-selact form select mb-2">
				<option selected>{{plaseholder}}</option>
					{{#each options}}
					<option value="{{value}}">{{text}}</option>
					{{/each}}
			</select>
		</div>
		{{/each}}
</div>
</div> 

<hr>
  {{#each delivery_type}}
  <div class="form-check">
	 <label class="form-check-label">{{type}}</label>
	 <input name="form" type="radio" class="form-check-input">
  </div>
  {{/each}}
  {{/with}}

  <hr>
  {{#with payment}}
  <h1>{{title}}</h1>
  {{#each list}}
     <div class="form-check">
		<label class="form-check-label">{{type}} {{description}}</label>
	    <input name="form" type="radio" class="form-check-input">
	 </div>
  {{/each}}
  {{/with}}

</div> 

</main>




