{{!-- 
Це код container файлу для education сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{> title data="My program"}}
        <ul>
            {{#each program}}
              <li>
                 {{#with excurcion}}{{/with}} 
                     <h1> excursion: {{excursion}}</h1>                
                        <p>name: {{name}}</p>

                        <br>
                      <h2>location</h2>
                       {{#with location}} 
                        <p> {{city}}, {{country}}</p>
                        {{/with}}
                     <br>

                     <p>date: {{date}}</p>
                       <br>
                     <h2>program</h2>
                       {{#each program}}
                        <p> name: {{ name }}</p>
                        <p>type: {{type}}</p>
                        <p> duration: {{ duration }}</p>
                        {{/each}}
                        <br>

                        <h2>details</h2>
                        {{#each details}}
                         <p>{{museum}}{{guide}}</p>
                         {{/each}}

                         {{#each museum}}{{/each}}
                           <p>name: {{name}} </p>
                            {{#each location}}
                            <p> {{address}} {{city}} {{country:}} </p>
                            {{/each}}
                        <br>
                        <h2>exhibits</h2>
                        {{#each exhibits}}
                        <p>{{name}},{{artist}},{{description}}{{audio_guide}}</p>
                        <p>{{name}},{{artist}},{{description}}{{audio_guide}}</p>
                        {{/each}}

                        <hr>
                    <h2>guide</h2>
                    {{#each guide}}
                    <p>{{name}}{{language}}{{rating}}</p>
                    {{/each}}

                 <br>
                <p>name: {{name}}</p>
                <p>type: {{type}}</p>
                        
              
            </li>
        {{/each}} 
      </ul>
</div>

<div>
    <h1>{{program.excurcion.name}}</h1>
    <p>location: {{program.excurcion.location.city}},
    {{program.excurcion.location.country}}</p>
    <p>Date: {{program.excurcion.date}}</p>

    <h2>{{program.excurcion.program.[0].name}}</h2>
    <p>Type: {{program.excurcion.program.[0].type}}</p>
    <p> Duration: {{program.excurcion.program.[0].duration}} hours</p>
    <p>details:</p>
  

</div>


