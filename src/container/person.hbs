 {{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with person}}
    <div>
        <h1>
           {{name}}
        </h1>
        <p>age: {{age}}</p>
        <p>gender: {{gender}}</p>
        <br>
        {{#with address}}
        <p> address:{{street}}, {{city}}, {{state}}, {{zip}}, {{country}}</p>
        {{/with}}
    </div>
    <br>
       <h2> education</h2>
        {{#each education}}
        <p> Degree: {{degree}}</p>
        <p>major: {{major}}</p>
        <p>university: {{university}} ({{graduationYear}})</p>
        {{/each}}
     
    <br>
    <h3>workExperience</h3>
        {{#each workExperience}}
        <p>company:{{company}} </p>
        <p>title:{{title}}</p>
        <p>({{startDate}} -{{endDate}})</p>
         <p> {{responsibilities}} </p>
         <br>
         <p>year_founded:{{year_founded}}</p>
         <p>industry:{{industry}}</p>
         <br>
         {{#each employees}}
            <p>name:{{name}}</p>
            <p>position:{{position}}</p>
            <p>department:{{department}}</p>

                {{#each projects}}
                <p> projects: {{name}},{{description}},{{status}}</p>
                {{/each}}

                <br>
                {{#each teams}}
                <h2>teams</h2>
                    <p>name:{{team_name}}</p>
                    <p>{{team_leader.name}}({{team_leader.title}})</p>
                    <a href={{team_leader.email}}></a>
                <br>
                   <p>skills:{{skills}}</p>
                   <hr>
                   <p>projects:{{projects}}</p>
                {{/each}}
            {{/each}}
         {{/each}}
     </div>
    {{/with}}
</div>

