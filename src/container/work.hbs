{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="row-4">
    {{#with main}}
        <main class="col-4">
            <section>
                {{> title data="Works history" big=true}}
                <div>
                    <ul>
                        {{#each works}}
                          <li>
                            <div>{{position}}</div>

                            <br>

                            <div>
                                {{duration.from}} - 
                                {{#if duration.to}} {{duration.to}} {{else}} (досі працюємо) 
                                {{/if}}
                            </div>

                            <br>

                            <div>{{> link text=company.name href=compani.url blank=true noline=true}}</div>

                            <b>{{compani.from}} - 
                                {{#if compani.to}} {{compani.to}} {{else}} (не відома) 
                                {{/if}}
                             </b>

                            <br>
                            <br>

                                <div>
                                   <strong> Projects ({{projectAmount}})</strong>
                                </div>

                             <br>
                             

                     <ul>
                        {{#each projects}}
                            <li> 
                                <div>{{> link text=name href=url blank=true noline=true}}</div>
                                <br>
                                <div>{{> link text=url href=url blank=true noline=true}}</div>
                                <br>

                                <div><p>{{about}}</p></div>
                                 
                                 <br>
                                 

                            {{#unless company.url}}
                                <b>{{company.name}}</b>{{else}}
                                
                                <div>{{> link text=company.name href=compani.url blank=true noLine=true}}</div>
                            {{/unless}}
                            <br>


                               <div> <em>Progekt awards ({{awardsAmount}}) </em></div>
                               

                                 <br>
                                 <div>{{> link text=awards.name blank=true noline=true}}</div>

                                 <hr>
                                <div>
                                    <em>Progekt stacks ({{starkAmount}}) </em>
                                </div>

                                <br>
                                  <div>
                                   {{#each stacks}} <li>{{name}}</li>{{/each}}
                                 </div>
                            </li>
                          {{/each}}
                         </ul>   
                          </li>
                          <br>
                        {{/each}}
                    </ul>
                </div>
            </section>      
        </maine>
    {{/with}}
</div>

